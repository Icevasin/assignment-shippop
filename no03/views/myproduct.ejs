<%- include('layout.ejs'); %>
<div class="container">
    <div class="row justify-content-center">
        <a href="/product/form">เพิ่มสินค้า</a>
        <div class="container">
            <div class="row my-5">
                
        <% Object.values(products).forEach(function(item){ %>
            
            <div class="col-lg-2 col-md-5 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="product/<%= item._id %>"><%= item.Product_name %></a>
                        </h4>
                        <h5>ราคา <%= item.Product_price %> บาท</h5>
                        <div class="row justify-content-center">
                        <td>
                            <a class="btn btn-danger" href="product/delete/<%= item._id %>" onclick="return confirm('คุณต้องการลบข้อมูลหรือไม่')">ลบ</a></td>
                        <td>
                            <form action="product/edit" method="post">
                                <input type="hidden" name="edit_id" value="<%= item._id %>">
                                <button type="submit" class="btn btn-primary">แก้ไข</button></td>
                            </form>
                        
                        </div>
                    </div>
                </div>
            </div>
        
        <% }) %>
    </div>
</div>

    </div>
</div>


</body>

</html>